.table
  display: flex
  flex-direction: column

.table-content
  display: flex
  border-bottom-right-radius: 4px
  border-bottom-left-radius: 4px
  padding: 0 20px
  background: $color-white
  border: 0.5px solid $color-line
  border-top: transparent
  flex-direction: column
  flex: 1

.tab-header
  height: 80px
  display: flex
  align-items: center
  box-sizing: border-box
  background: $color-white
  .tab-box
    margin-right: 10px

.big-list
  flex: 1
  border-radius: 4px
  box-sizing: border-box
  background: $color-white
  overflow: visible
  display: flex
  position: relative
  flex-direction: column

.list-box
  font-family: $font-family-regular
  color: $color-text-main
  padding: 0 20px
  height: 65px
  box-sizing: border-box
  border-bottom-1px(#E9ECEE)
  display: flex
  align-items: center
  &:before
    content: ""
    pointer-events: none // 解决iphone上的点击无效Bug
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-right: 1px solid #E9ECEE
    border-left: 1px solid #E9ECEE
    box-sizing border-box
    width: 200%
    height: 100%
    transform: scaleX(.5) translateZ(0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width: 100%
      height: 300%
      transform: scaleX(1 / 3) translateZ(0)
  .list-item
    font-size: $font-size-14
    box-sizing: border-box
    padding-right: 20px
    flex: 1
    align-items: center
    //display flex
    .list-img
      width: 42px
      height: @width
      object-fit: cover
      overflow: hidden
      border-radius: 2px
      margin-right: 12px
      flex-shrink 0
  &.list-header
    height: 45px
    background: #F4F8F9
    &:after
      content: ""
      pointer-events: none // 解决iphone上的点击无效Bug
      display: block
      position: absolute
      left: 0
      top: 0
      transform-origin: 0 0
      border-top: 1px solid #E9ECEE
      border-bottom: 0.5px solid #E9ECEE
      box-sizing border-box
      width: 100%
      height: 200%
      transform: scaleY(.5) translateZ(0)
      @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
        width: 100%
        height: 300%
        transform: scaleY(1 / 3) translateZ(0)
    .list-item
      white-space: nowrap
      font-size: $font-size-14

.list .list-box
  &:nth-child(2n)
    background: #F4F8F9
  &:hover
    background: #E8F4F9

.list
  position: relative
  flex: 1
  .list-content
    font-family: $font-family-regular
    color: $color-text-main
    height: 65px
    &:nth-child(2n)
      background: #F4F8F9
    &:hover
      background: #E8F4F9
    .list-item
      no-wrap()
      font-size: $font-size-14

//双行样式
.list-double-row
  .item-sub
    no-wrap()
    line-height: 1.2
    margin-top: 6px
    font-size: $font-size-14
    color: $color-text-assist
  .item-dark
    no-wrap()
    line-height: 18px
    font-size: $font-size-14
  .item-sub-time
    no-wrap()
    margin-top: 6px
    font-size: $font-size-14
    line-height: 18px

.list-item-double
  white-space: normal
  line-height: 18px
  no-wrap-plus()

.list-item-layout
  layout(row)
  align-items: center

// 列表操作栏样式
.list-operation
  display: inline-block
  line-height: 14px
  position: relative
  color: $color-main
  margin-right: 18px
  height: 14px
  white-space: nowrap
  cursor: pointer
  font-size: $font-size-14
  transition: color 0.2s
  overflow: visible
  &:hover
    color: #2655BB
  &:after
    position: absolute
    top: 0
    right: -10px
    content: ''
    height: 14px
    width: 1px
    background: $color-line
  &:last-child
    margin-right: 0
    &:after
      display: none

.list-operation-strong
  display: inline-block
  position: relative
  color: $color-main
  white-space: nowrap
  cursor: pointer
  font-size: $font-size-14
  transition: color 0.2s
  padding: 0 6px
  line-height: 22px
  border: 0.5px solid $color-main
  border-radius: 2px
  box-sizing: border-box
  margin-right: 10px
  &:hover
    border: 0.5px solid #2655BB
    color: #2655BB

.list-operation-disable
  cursor: not-allowed
  color: #ACACAC
  &:hover
    color: #ACACAC

.pagination-box
  height: 66px
  display: flex
  align-items: center

.down-content
  box-sizing: border-box
  border: 0.5px solid $color-line
  border-radius: 4px
  padding: 0 20px
  min-height: 80px
  background: $color-white
  display: flex
  align-items: center
  margin-bottom: 20px
  flex-wrap: wrap
  .down-item
    display: flex
    margin-right: 30px
  .down-item-small
    margin-right: 10px
  .down-item-text
    margin: 20px 80px 0 0
    color: $color-text-main
    .down-text
      font-size: $font-size-12
      color: $color-text-main
      white-space: nowrap
    .header-text
      font-size: $font-size-14
      color: $color-text-main
      white-space: nowrap
  .down-item-text
    margin: 20px 80px 0 0
    color: $color-text-main
    &:last-child
      margin-right: 0
    .down-text
      font-size: $font-size-12
      color: $color-text-main
      white-space: nowrap
    .header-text
      font-size: $font-size-14
      color: $color-text-main
      white-space: nowrap
  .down-tip
    font-size: $font-size-12
    color: $color-text-main
    margin-right: 10px
  .time-tip
    margin: 0 2px
    font-size: $font-size-14

.layout-top > div
  margin-bottom: 0

